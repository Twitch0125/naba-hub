
model Player {
  player_id     Int            @id
  league_id     Int
  position      Int
  first_name    String
  last_name     String
  nick_name     String
  age           Int
  role          Int
  date_of_birth DateTime
  team          Team?          @relation(fields: [team_id], references: [team_id])
  team_id       Int?
  BattingStat   BattingStat[]
  FieldingStat  FieldingStat[]
  PitchingStat  PitchingStat[]
}

model Team {
  team_id             Int      @id
  name                String
  abbr                String
  nickname            String
  logo_file_name      String?
  background_color_id String?
  text_color_id       String?
  player              Player[]
}

model BattingStat {
  id        Int    @id @default(autoincrement())
  player    Player @relation(fields: [player_id], references: [player_id])
  player_id Int
}

model FieldingStat {
  id        Int    @id @default(autoincrement())
  player    Player @relation(fields: [player_id], references: [player_id])
  player_id Int
}

model PitchingStat {
  id        Int    @id @default(autoincrement())
  player    Player @relation(fields: [player_id], references: [player_id])
  player_id Int
}
